<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thuyhien.kotlinrxjava">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".KotlinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.CommentActivity" />
        <activity android:name=".ui.activity.CouponActivity" />
        <activity android:name=".ui.activity.ExampleServiceActivity" />
        <activity android:name=".ui.activity.BoundServiceActivity" />
        <activity android:name=".ui.activity.CountActivity" />
        <activity android:name=".ui.activity.AlarmActivity" />

        <service android:name=".service.PlayerInService" />
        <service android:name=".service.BoundService" />
        <service
            android:name=".service.CountIntentService"
            android:exported="false" />
        <service android:name=".service.AlarmService" />
        <service android:name=".service.BootService" />

        <receiver
            android:name=".service.receiver.AlarmReceiver"
            android:process=":remote" />
        <receiver android:name=".service.receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".ui.activity.LocalBroadcastActivity" />
        <activity android:name=".ui.activity.ContactActivity" />
        <activity android:name=".ui.activity.SignInActivity" />

        <provider
            android:authorities="com.example.thuyhien.kotlinrxjava.contentProvider"
            android:name=".contentProvider.AccountProvider"
            android:exported="true"/>
    </application>

</manifest>